{
  "schemaVersion": 1,
  "id": "keyblocker",
  "version": "${version}",
  "name": "KeyBlocker",
  "description": "API y mod para bloquear y ocultar teclas dinámicamente en Minecraft. Útil para servidores, mapas de aventura y modpacks.",
  "authors": ["Javivi"],
  "contact": {
    "homepage": "https://github.com/JaviviDev/KeyBlocker",
    "sources": "https://github.com/JaviviDev/KeyBlocker"
  },
  "license": "MIT",
  "icon": "assets/keyblocker/icon.png",
  "environment": "*",
  "entrypoints": {
    "fabric-datagen": [
      "me.javivi.kb.client.KeyblockerDataGenerator"
    ],
    "client": [
      "me.javivi.kb.client.KeyblockerClient"
    ],
    "main": [
      "me.javivi.kb.Keyblocker"
    ]
  },
  "mixins": [
    "keyblocker.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}
